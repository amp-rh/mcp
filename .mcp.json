{
  "mcpServers": {
    "mcp-server": {
      "type": "stdio",
      "command": "uv",
      "args": [
        "--directory",
        "${PROJECT_DIR}",
        "run",
        "mcp-server"
      ],
      "env": {
        "MCP_SERVER_NAME": "mcp-server"
      }
    },
    "mcp-router": {
      "type": "stdio",
      "command": "uv",
      "args": [
        "--directory",
        "${PROJECT_DIR}",
        "run",
        "mcp-router"
      ],
      "env": {
        "MCP_BACKENDS_CONFIG": "${PROJECT_DIR}/config/backends.yaml"
      },
      "disabled": true
    }
  }
}
